<div class="container text-center"></div>

<p style="color: green"><%= notice %></p>

<h1>Emails</h1>

<div id="emails">
  <% @emails.each do |email| %>
    <%= render email %>
    <p>
      <%= link_to "Show this email", email %>
    </p>
  <% end %>
</div>

<%= link_to "New email", new_email_path, data: {turbo_frame: "modal"} %>

 
</div>